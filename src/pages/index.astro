---
import Layout from "../layouts/Layout.astro";
import Hero from "../sections/Hero.astro";
import Navbar from "../layouts/Navbar.astro";
import AboutMe from "../sections/AboutMe.astro";
import Skills from "../sections/Skills.astro";
import Projects from "../sections/Projects.astro";
import Contact from "../sections/Contact.astro";
import Certificates from "../sections/Certificates.astro";
---

<Layout title="JS Portfolio">
	<main>
		<Hero />
		<Navbar />
		<AboutMe />
		<Skills />
		<Projects />
    <Certificates/>
    <!-- <iframe style="border: 1px solid rgba(0, 0, 0, 0.1);" width="650" height="800" src="https://www.figma.com/embed?embed_host=share&url=https%3A%2F%2Fwww.figma.com%2Fproto%2Fb0iXH4CueBR24gmsJCCBqb%2FWordle-Game%3Fnode-id%3D9-527%26viewport%3D719%252C480%252C0.31%26t%3DzVyZE444itWg7PVJ-1%26scaling%3Dmin-zoom%26content-scaling%3Dfixed%26page-id%3D9%253A421" allowfullscreen></iframe> -->
		<Contact />
	</main>

	<style>
		:root{
			--container-width:80%
		}
		html {
			scroll-behavior: smooth;
		}

		body {
			margin: 0 auto !important;
			padding: 0;
			box-sizing: border-box;
		}

		.instructions {
			line-height: 1.6;
			margin: 1rem 0;
			border: 1px solid rgba(var(--accent), 25%);
			background-color: white;
			padding: 1rem;
			border-radius: 0.4rem;
		}
		.instructions code {
			font-size: 0.875em;
			font-weight: bold;
			background: rgba(var(--accent), 12%);
			color: rgb(var(--accent));
			border-radius: 4px;
			padding: 0.3em 0.45em;
		}
		.instructions strong {
			color: rgb(var(--accent));
		}
		.link-card-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
			gap: 1rem;
			padding: 0;
		}
	</style>
</Layout>
