---
import imageRocket from "../assets/Startup_Monochromatic.png";

const resumeLink = 'https://drive.google.com/file/d/16PEhOfWZTLEuXrbgoOr4Vy7cEZXcpGiC/view?usp=sharing'
---

<section id="AboutMe">
    <div class="AboutMe">
        <div class="aboutMeImage">
            <img src={imageRocket} alt="about-me image" />
        </div>

        <div class="content">
            <h2>Hello, My name is Julio Santacruz, I'm a web developer</h2>
            <p>Let me help you with your project</p>
            <a href={resumeLink} class="resume-btn" target="_blank">Download Resume</a>
        </div>
    </div>
</section>

<style>
    section {
        height: 100vh;
        width: 100vw;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        background-attachment: fixed;
    }
    .AboutMe {
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
        width: 60%;
    }
    .aboutMeImage {
        width: 45%;
    }

    img {
        width: 100%;
    }
    .content {
        width: 45%;
        height: 500px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    h2 {
        font-size: 30px;
    }
    .resume-btn {
        background: #4e66f8;
        color: #fff;
        border: none;
        font-size: 1.5rem;
        padding: 0.5rem 1rem;
        border-radius: 0.3rem;
        cursor: pointer;
        box-shadow: 0px 10px 6px 0px rgba(0, 0, 0, 0.25);
        text-decoration: none;
        text-align: center;
    }

    .resume-btn:hover,
    .resume-btn:focus {
        background: #505ebb;
    }
    @media screen and (max-width: 1024px) {
        h2 {
            margin: 15px 0;
        }
    }

    @media screen and (max-width: 768px) {
        h2 {
            font-size: 30px;
        }
        .AboutMe {
            flex-direction: column-reverse;
        }
        .content {
            width: 80%;
            height: 40%;
        }
        .aboutMeImage {
            width: 60%;
            height: 40%;
        }
    }

    @media screen and (max-width: 425px) {

        h2 {
            font-size: 24px;
        }

        .content {
            width: 100%;
            height: 40%;
        }
        .aboutMeImage {
            width: 100%;

            height: 40%;
        }
    }
    @media screen and (max-width: 320px) {
    }
</style>
