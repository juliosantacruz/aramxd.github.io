---
import logo from "../assets/logo_450x200_azul_trans.png";
---

<header>
  <nav id="navbar">
    <a href="#Hero" class="logoNavbar">
      <img src={logo} alt="logo" class="logo" /></a
    >
    <a href="#AboutMe" class="linkNavbar"> About Me</a>
    <a href="#Skills" class="linkNavbar"> Skills</a>
    <a href="#Projects" class="linkNavbar"> Projects</a>
    <a href="#Certificates" class="linkNavbar"> Certificates</a>
    <a href="#Contact" class="linkNavbar"> Contact</a>
  </nav>
</header>

<script>
  // console.log("inicia");
  let indexSeccionActiva: string;
  const menu: any = document.getElementById("navbar");
  let menuIndicador = menu.querySelectorAll("a");
  const secciones = document.querySelectorAll("section");

  // console.log("menuIndicador", menuIndicador);
  menuIndicador.forEach((element: any) => {
    let linkId = element.hash.slice(1);

    // console.log("element", linkId);
  });

  // OBSERVER (HACE TRACK A LA PAGINA PARA MOVER EL INDICADOR DE BOTON)
  const observer: any = new IntersectionObserver(
    (entradas, observer) => {
      entradas.forEach((entrada) => {
        // console.log('id',entrada.target.id);
        if (entrada.isIntersecting) {
          // console.log("target", entrada.target);
          indexSeccionActiva = entrada.target.id;
          // console.log('menu activo',indexSeccionActiva)

          menuIndicador.forEach((element: any) => {
            // console.log('clase',element.classList)
            element.classList.remove("active");
            if (element.hash.slice(1) === indexSeccionActiva) {
              // console.log('linkactivo:D',element)
              element.classList.add("active");
            }
          });
        }
      });
    },
    {
      rootMargin: "-80px 0px 0px 0px",
      threshold: 0.2,
    }
  );
  //   observer.observe(document.getElementById("AboutMe"));
  // ASIGNAMOS EL OBSERVADOR A CADA UNA DE LAS SECCIONES
  secciones.forEach((seccion) => observer.observe(seccion));
</script>

